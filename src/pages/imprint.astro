---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Imprint — Cathrin">
  <div class="min-h-screen flex flex-col">
    <main class="flex-1 px-6 md:px-10 lg:px-16 py-16 md:py-24 max-w-2xl">
      <h1 class="text-2xl font-medium">Imprint</h1>

      <div class="mt-8 space-y-6 text-dark/70 text-[15px] leading-relaxed">
        <div>
          <p class="font-medium text-dark">Johannes Oster</p>
          <p class="mt-1">
            Bendlgasse 31 Top 18<br />
            1120 Wien, Österreich
          </p>
        </div>

        <div>
          <p class="font-medium text-dark">Contact</p>
          <p class="mt-1">
            <a href="mailto:hey@cathrin.ai" class="hover:text-dark transition-colors">hey@cathrin.ai</a>
          </p>
        </div>

        <div>
          <p class="font-medium text-dark">Business purpose</p>
          <p class="mt-1">Development and distribution of software.</p>
        </div>

        <div>
          <p class="text-[13px] text-dark/40">
            Information according to § 5 ECG / § 25 MedienG.
          </p>
        </div>
      </div>
    </main>

    <footer class="px-6 md:px-10 lg:px-16 py-5 border-t border-dark/10">
      <div class="flex items-center justify-between text-[13px] text-dark/50">
        <a href="/" class="hover:text-dark transition-colors">&copy; {new Date().getFullYear()} Cathrin</a>
        <nav class="flex gap-4">
          <a href="/imprint" class="text-dark">Imprint</a>
          <a href="/privacy" class="hover:text-dark transition-colors">Privacy</a>
        </nav>
      </div>
    </footer>
  </div>
</Layout>
